{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Astrid Coenrad's Portfolio Website",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/css/index.css -o ./dist/style.css --watch",
    "build": "npx tailwindcss -i ./src/css/index.css -o ./dist/style.css --minify",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write 'src/**/*.{html,js,css}'",
    "clean": "rimraf dist/style.css && npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "eslint": "^8.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.15"
  }
}
